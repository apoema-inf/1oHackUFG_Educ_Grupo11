<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
            android:background="@color/cor_am1"
            android:layout_width="match_parent"
            android:layout_height="80dp">


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_img_profile"
                android:src="@drawable/female3"
                android:layout_width="50dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"/>

        <TextView
                android:fontFamily="@font/caviardreamsitalic"
                android:id="@+id/main_txt_profile"
                android:text="Paula Thais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" android:layout_alignParentStart="true"
                android:layout_centerVertical="true" android:layout_marginStart="67dp"/>

        <ImageButton
                android:id="@+id/main_img_share"
                android:src="@drawable/search"
                android:scaleType="centerInside"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/black"
            app:tabIndicatorHeight="4dp"
            app:tabBackground="@color/cor_am1"
            app:tabMode="fixed">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>